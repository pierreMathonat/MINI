package com.engine.core;	import nme.display.BitmapData;	import nme.geom.Rectangle;			class Tileset {				private var _width:Int;		private var _height:Int;		public var rect:Array<Rectangle>;		public var pixels:BitmapData;		public var columns:Int;		public var rows:Int;				public var height(getHeight, setHeight):Int;		public var width(getWidth, setWidth):Int;				public function new(Pixels:BitmapData,Height:Int,Width:Int) {						pixels=Pixels;			height = Height;			width = Width;						rect=new Array();			var x:Int,y:Int;			for(x in 0...columns){				for (y in 0...rows){					var id:Int=(y*columns)+x+1;					rect[id]=new Rectangle(x*width,y*height,width,height);				}			}					}				public function dispose():Void{			pixels.dispose();			rect=null;		}				public function setHeight(v:Int):Int{			_height=v;			rows = Std.int(pixels.height / _height);			return _height;		}		public function setWidth(v:Int):Int{			_width=v;			columns = Std.int(pixels.width / _width);			return _width;		}				public function getHeight():Int{return _height;}		public function getWidth():Int{return _width;}	}	